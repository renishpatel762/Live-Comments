{
  "id": null,
  "title": "Live Comments System Overview",
  "tags": ["live-comments", "microservices"],
  "timezone": "browser",
  "panels": [
    {
      "id": 10,
      "title": "Recent Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{service=~\"comment_publisher|comment_streaming\"} |= \"\"",
          "refId": "A"
        }
      ],
      "datasource": "Loki",
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 32 }
    },
    {
      "id": 11,
      "title": "Recent Error Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{level=\"error\"} |= \"\"",
          "refId": "A"
        }
      ],
      "datasource": "Loki",
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 42 }
    },
    {
      "id": 1,
      "title": "Request Rate (RPS)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) by (service)",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "mappings": [],
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "Response Time (95th percentile)",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, service))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
    },
    {
      "id": 3,
      "title": "Error Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status_code=~\"4..|5..\"}[5m])) by (service) / sum(rate(http_requests_total[5m])) by (service) * 100",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
    },
    {
      "id": 4,
      "title": "Active SSE Connections",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(sse_connections_active)",
          "legendFormat": "Total Connections",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "10s",
  "schemaVersion": 30,
  "version": 1
}
